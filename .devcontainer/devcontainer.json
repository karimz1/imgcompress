{
   "name": "Image Compressor DevContainer",
   //"image": "ghcr.io/karimz1/devcontainer-image-only-for-devs:2025-07",
  "build": {
    "dockerfile": "Dockerfile.base",
    "context": "." 
  },
   "postCreateCommand": "npm i pnpm -g && pip install -r .devcontainer/requirements-dev.txt && pnpm install --dir frontend/ && echo 'Dev container is ready!'",
    "containerEnv": {
      "IS_RUNNING_IN_DEVCONTAINER": "true"
    },
    "settings": {
        "python.defaultInterpreterPath": "/venv"
    },
    "extensions": [
      "ms-python.python",
      "ms-azuretools.vscode-docker",
      "formulahendry.code-runner",
      "dbaeumer.vscode-eslint",
      "ms-playwright.playwright",
      "redhat.vscode-yaml"
    ],
    "mounts": [
      "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ]
  }
  